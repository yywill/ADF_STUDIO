<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="ticket-wizard-flow">
    <default-activity>generalView</default-activity>
    <view id="generalView">
      <page>/fragments/generalView.jsff</page>
      <train-stop>
        <display-name>General</display-name>
      </train-stop>
    </view>
    <view id="detailsView">
      <page>/fragments/detailsView.jsff</page>
      <train-stop>
        <display-name>Details</display-name>
      </train-stop>
    </view>
    <view id="paymentView">
      <page>/fragments/paymentView.jsff</page>
      <train-stop>
        <display-name>Payment</display-name>
      </train-stop>
    </view>
    
    <train/>
    <use-page-fragments/>
  </task-flow-definition>
</adfc-config>
